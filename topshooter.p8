function _draw()
	cls(15)
	if p.dx!=0 or p.dy!=0 then
		if t%8<4 then
			spr(p.sp+1,p.x,p.y)
		else
			spr(p.sp,p.x,p.y)		
		end
	else
		spr(p.sp,p.x,p.y)
	end
	drbullets()
	drsmoke()
end

function updbullets()
	for b in all(bullets) do
		if t%3==0 then
			b.sp+=1
			if b.sp>10 then
				b.sp=9
			end
		end
		b.x+=b.dx
		b.y+=b.dy
		if b.x<0 or b.x>128
			or b.y<0 or b.y>128 then
			del(bullets,b)
		end	
	end
end

function updsmoke()
	for s in all(smoke) do
		s.r-=1
		if s.r<0 then
			del(smoke,s)
		end
	end
end

function drbullets()
	for b in all(bullets) do
		spr(b.sp,b.x,b.y)
	end
end

function drsmoke()
	for s in all(smoke) do
		circfill(s.x,s.y,s.r,7)
	end
end

function fire()
	local dx,dy=0,-1
	local ox,oy=2,-4
	if p.sp==5 or p.sp==6 then
		dx,dy=0,1
		ox,oy=-2,4
	end
	if p.sp==3 or p.sp==4 then
		dx,dy=-1,0
		ox,oy=-2,-2
	end
	if p.sp==7 or p.sp==8 then
		dx,dy=1,0
		ox,oy=2,1
	end
	local b={x=p.x+ox,
										y=p.y+oy,
										sp=9,
										dx=dx*6,
										dy=dy*6
										}
	add(bullets,b)
	mksmoke(ox,oy)
end

function mksmoke(_ox,_oy)
	local ox,oy=_ox,_oy
	local s={r=5,x=p.x+ox,y=p.y+oy}
	add(smoke,s)
end
