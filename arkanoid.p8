function _init()
	p={sp=1,x=2,y=120,dx=0,dy=0}
	b={sp=3,x=4,y=120,dx=0,dy=0}
end

function _update()
	p.dx=0
	p.dy=0
	if btn(⬅️) then
		p.dx=-2
	end
	if btn(➡️) then
		p.dx=2
	end
	p.x+=p.dx
	p.y+=p.dy
end

function _draw()
	cls()
	spr(p.sp,p.x,p.y,2,1)
	spr(b.sp,b.x,b.y)
	rect(0,0,127,127,7)
end
