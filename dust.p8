version 42
__lua__
--topshooter
--by eduszesz
function _init()
	rotate=1
	x=0
	y=0
	sp=64

end
function _update()
	if btnp(4) then
		rotate+=1
		if rotate>4 then
			rotate=1
		end
	end
	if btnp(⬆️) then
		y+=-1
	end
	if btnp(⬇️) then
		y+=1
	end
	
	if btnp(⬅️) then
		x+=-1
	end
	if btnp(➡️) then
		x+=1
	end
	if rotate==1 then
		sp=64
		dirx=false
		diry=false
	end
	if rotate==2 then
		sp=66
		dirx=false
		diry=false
	end
	if rotate==3 then
		sp=64
		dirx=false
		diry=true
	end
	if rotate==4 then
		sp=66
		dirx=true
		diry=false
	end

	
end

function _draw()
	cls(15)
	spr(sp,64,64,2,2,dirx,diry)
	fillp(░)
	circfill(64+x,64+y,2,6)
	fillp()
	print("x: "..x..", y: "..y,10,10,0)
	print("dirx: "..tostr(dirx), 10,20,0)
	print("diry: "..tostr(diry), 10,30,0)

end

